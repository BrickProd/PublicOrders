<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PublicOrders.Views"
             xmlns:ViewModels="clr-namespace:PublicOrders.ViewModels" x:Class="PublicOrders.Views.WinnerSearchPanel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1200" Padding="20 0 20 0">
    <UserControl.DataContext>
        <ViewModels:WinnerSearchViewModel/>
    </UserControl.DataContext>
    <Grid Background="Transparent">
        <Border BorderBrush="DodgerBlue" BorderThickness="0 0 0 0" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="100*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Margin="10 20" Grid.Row="0">
                    <TextBox x:Name="key" FontSize="18" Margin="0" KeyDown="OnKeyDownHandler">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Execute"  Command="{Binding CustomersSearchCommand}"></KeyBinding>
                        </TextBox.InputBindings>
                        <TextBox.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
                                    <TextBox x:Name="CustomerName" Grid.Column="0" Text="{Binding SearchInput, Mode=TwoWay}" ></TextBox>
                                    <Button HorizontalAlignment="Right" Content="Найти" Background="White" Grid.Column="1" Foreground="Black" Padding="5 0" Command="{Binding CustomersSearchCommand}"></Button>
                                    <ProgressBar Margin="0" Value="{Binding SearchingProgress}" Visibility="Hidden" Minimum="0" Maximum="100">
                                        <ProgressBar.Style>
                                            <Style TargetType="ProgressBar">
                                                <Setter Property="Foreground" Value="#FF007ACB"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCustomersSearching}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                </Grid>
                            </ControlTemplate>
                        </TextBox.Template>
                        <TextBox.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCustomersSearching}" Value="True">
                                        <Setter Property="TextBox.IsEnabled" Value="False"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ProgressBar Margin="0,30,0,-3" Value="{Binding SearchingProgress}"  Maximum="100" Minimum="0" Opacity="0" >
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Foreground" Value="#FF007ACB"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCustomersSearching}" Value="True">
                                        <Setter Property="Opacity" Value="1"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </Grid>
                <Grid Margin="10 0" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="245*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!--ПАНЕЛИ НА ПОБЕДИТЕЛЕЙ-->

                    <Border BorderBrush="Black" BorderThickness="0.5 0 0.5 0" HorizontalAlignment="Left" Width="500">
                        <ListBox x:Name="CustomersListBox" Margin="0,0,0,0" ItemsSource="{Binding Customers}" BorderThickness="0" FontSize="16"
							ItemContainerStyle="{StaticResource ListBoxItemStyle}" SelectedItem="{Binding SelectedCustomer}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
							BorderBrush="LightGray">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="16" TextWrapping="Wrap"></TextBlock>
                                        <TextBlock Text="{Binding Vatin}" FontSize="14" Foreground="Gray"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="0.5 0 0.5 0" Margin="505,0,0,0" HorizontalAlignment="Left" Width="500">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="257*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCustomer}" Value="{x:Null}">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Button Content="Старт" Command="{Binding WinnerLotsSearchCommand}" Width="115" Height="25" Margin="0,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource PlayButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsWinnerLotsSearching}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Пауза" Command="{Binding WinnerLotsSearchPausePlayCommand}" Width="112" Height="25" Margin="0,0,0,0" >
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource PauseButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsWinnerLotsSearching}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsWinnerLotsSearching}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Стоп" Command="{Binding WinnerLotsSearchStopCommand}" Width="120" Height="25" Margin="0,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource StopButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsWinnerLotsSearching}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsWinnerLotsSearching}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"></Setter>
                                                </DataTrigger>
                                                
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <ListBox x:Name="WinnersListBox" Margin="0,0,0,0" ItemsSource="{Binding Winners}" BorderThickness="0" FontSize="16"
							    ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                                     AlternationCount="2"
							    BorderBrush="LightGray" Grid.Row="1">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="16" TextWrapping="Wrap"></TextBlock>
                                            <TextBlock Text="{Binding Lot.Name}" FontSize="14" Foreground="Gray"></TextBlock>
                                            <TextBlock Text="{Binding Email}" FontSize="14" Foreground="Gray"></TextBlock>
                                            <TextBlock Text="{Binding Phone}" FontSize="14" Foreground="Gray"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Right" Margin="0,0,10,0" Width="97.333">

                    </Border>
                    <Button Content="Создать отчёт" FontSize="18" Command="{Binding CreateReportCommand}" Style="{StaticResource OKButtonStyle}" Background="Transparent" Grid.Row="1" Height="25" HorizontalAlignment="Center"></Button>
                </Grid>
            </Grid>

        </Border>
    </Grid>
</UserControl>
