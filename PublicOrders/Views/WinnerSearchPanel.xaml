<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PublicOrders.Views"
             xmlns:ViewModels="clr-namespace:PublicOrders.ViewModels" x:Class="PublicOrders.Views.WinnerSearchPanel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" Padding="20 0 20 0">
    <UserControl.DataContext>
        <ViewModels:WinnerSearchViewModel/>
    </UserControl.DataContext>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Margin="5" Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding Winners}"/>
        <Button x:Name="button" Content="Создать отчёт" Margin="35,5,5,5" Grid.Row="3" Grid.Column="1" Command="{Binding CreateReportCommand}"/>
        <Button x:Name="button1" Content="Хз" HorizontalAlignment="Left" Margin="5,5,0,5" Grid.Row="3" Width="100"/>
        <TextBox x:Name="textBox" Height="25" Margin="5" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding SearchInput}"/>
        <Button x:Name="button2" Content="Найти" Margin="5,5,5,5" Grid.Row="1" Grid.Column="1" Command="{Binding SearchCommand}"/>
        <ProgressBar Height="25" Margin="5" Grid.Row="1" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
